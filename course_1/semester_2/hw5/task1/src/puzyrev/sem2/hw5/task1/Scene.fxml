<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox minHeight="150.0" minWidth="510.0" prefHeight="150.0" prefWidth="510.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="puzyrev.sem2.hw5.task1.Controller">
    <children>
        <Spinner fx:id="firstValue" minHeight="50.0" minWidth="100.0" onMouseClicked="#clickSpinner" prefHeight="50.0" prefWidth="100.0">
            <HBox.margin>
                <Insets bottom="50.0" left="50.0" top="50.0" />
            </HBox.margin>
        </Spinner>
        <MenuButton fx:id="operation" minHeight="50.0" minWidth="60.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="60.0">
            <items>
                <MenuItem mnemonicParsing="false" onAction="#changeOperation" text="+" />
                <MenuItem mnemonicParsing="false" onAction="#changeOperation" text="-" />
                <MenuItem mnemonicParsing="false" onAction="#changeOperation" text="*" />
                <MenuItem mnemonicParsing="false" onAction="#changeOperation" text="/" />
            </items>
            <HBox.margin>
                <Insets bottom="50.0" left="10.0" top="50.0" />
            </HBox.margin>
        </MenuButton>
        <Spinner fx:id="secondValue" minHeight="50.0" minWidth="100.0" onMouseClicked="#clickSpinner" prefHeight="50.0" prefWidth="100.0">
            <HBox.margin>
                <Insets bottom="50.0" left="10.0" top="50.0" />
            </HBox.margin>
        </Spinner>
        <Label alignment="CENTER" contentDisplay="CENTER" ellipsisString="=" minHeight="50.0" minWidth="20.0" prefHeight="50.0" prefWidth="20.0" text="=" textAlignment="CENTER">
            <HBox.margin>
                <Insets bottom="50.0" left="10.0" top="50.0" />
            </HBox.margin>
            <font>
                <Font size="18.0" />
            </font></Label>
        <TextField fx:id="result" editable="false" minHeight="50.0" minWidth="100.0" prefHeight="50.0" prefWidth="100.0">
            <HBox.margin>
                <Insets bottom="50.0" left="10.0" right="10.0" top="50.0" />
            </HBox.margin></TextField>
    </children>
</HBox>